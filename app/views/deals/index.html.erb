<div class="container d-flex flex-column">
  <div class="mb-5">
    <h1 class="home-title">Deals for <%= @category.capitalize %></h1>
  </div>
  <div class="row g-3">
    <% @deals.each do |deal| %>
    <div class="col-12 col-md-6 col-lg-3">
        <%= link_to deal_path(deal), class: "deal-card-link" do %>
          <div class="deal-card h-100">
            <img src=<%= deal.image_path %> class="deal-card-img-top" alt="...">
            <div class="deal-card-body">
              <h5 class="deal-card-title"><%= deal.name %></h5>
              <p class="deal-card-text"><%= deal.description %></p>
            </div>
          </div>
        <% end %>
      </li>
    </div>
    <% end %>
  </div>

</div>
