<div class="banner">
 <%= image_tag "banner.png", alt: "banner"%>
</div>
<div class="ourcontainer">
 <ul id="categories">
   <% @categories_with_images.each do |category, image_url| %>
     <li>
       <%= link_to deals_path(category: category), class: "card-link" do %>
         <div class="card" style="background-image: url('<%= image_url %>');">
         <div class="card-overlay"></div>
           <div class="card-content">
             <%= category %>
           </div>
         </div>
       <% end %>
     </li>
   <% end %>
 </ul>
</div>


